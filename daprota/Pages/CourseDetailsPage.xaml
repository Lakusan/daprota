<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="daprota.Pages.CourseDetailsPage"
             xmlns:ViewModel="clr-namespace:daprota.ViewModels"
             x:DataType="ViewModel:VM_CourseDetails"
             Title="">
    <Grid 
        RowDefinitions=".05*,.2*,.6*,.15*">
        
    <VerticalStackLayout Grid.Row="0" Background="Brown">
            <Label Text="{Binding CurrentCourse.Id, StringFormat='Course id: {0:F0}'}" FontSize="40" HorizontalOptions="Center"></Label>
            <Label Text="{Binding CurrentCourse.Title , StringFormat='Course Title: {0:F0}'}" FontSize="40" HorizontalOptions="Center"></Label>
            <Image Source="{Binding CurrentCourse.Image}"></Image>
            <Label Text="{Binding CurrentCourse.Description_long, StringFormat='Description_long: {0}'}"></Label>
            <Label Text="{Binding CurrentCourse.Description_short, StringFormat='Description_short: {0}'}"></Label>
            <Label Text="{Binding CurrentCourse.Category, StringFormat='Category: {0}'}"></Label>
        </VerticalStackLayout>
    <Button Grid.Row="3" Text="Back" Command="{Binding GoBackCommand}"></Button>
    </Grid>
</ContentPage>
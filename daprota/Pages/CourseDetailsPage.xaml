<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="daprota.Pages.CourseDetailsPage"
             xmlns:ViewModel="clr-namespace:daprota.ViewModels"
             x:DataType="ViewModel:VM_CourseDetails"
             Title="CourseDetails">
    <VerticalStackLayout>
        <Label 
            x:Name="label"
            Text="Welcome to .NET MAUI!"
            VerticalOptions="Center" 
            HorizontalOptions="Center" />

        <Label Text="{Binding Id, StringFormat='Course id: {0:F0}'}" FontSize="40" HorizontalOptions="Center"></Label>
        <Button Text="Back"
                Command="{Binding GoBackCommand}">
        </Button>
        <ProgressBar 
            Margin="20" 
            WidthRequest="250"
            Progress=".5"
            ProgressColor="red">
        </ProgressBar>
    </VerticalStackLayout>
</ContentPage>
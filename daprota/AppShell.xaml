<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="daprota.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:daprota.Pages"
    Shell.FlyoutBehavior="Flyout"
    Title="daprota">

    <ShellContent
        ContentTemplate="{DataTemplate local:CoursesPage}"
        Route="Pages.CoursePage"
        Title="Courses"/>

    <ShellContent
        ContentTemplate="{DataTemplate local:CourseDetailsPage}"
        Route="Pages.CourseDetailsPage"
        Title="Course Details"/>
    
    <ShellContent
        ContentTemplate="{DataTemplate local:QuestionsPage}"
        Route="Pages.QuestionsPage"
        Title="Questions(Test)"/>

    <ShellContent
     ContentTemplate="{DataTemplate local:ChangeUsernamePage}"
     Route="Pages.ChangeUsernamePage"
     Title="Change Username Page"/>

</Shell>
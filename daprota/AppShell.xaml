<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="daprota.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:daprota.Pages"
    Shell.FlyoutBehavior="Disabled"
    Shell.NavBarIsVisible="False"
    Title="daprota">

    <ShellContent
        ContentTemplate="{DataTemplate local:CoursesPage}"
        Route="Pages.CoursePage"
        Title="Courses"/>

    <ShellContent
        ContentTemplate="{DataTemplate local:CourseDetailsPage}"
        Route="Pages.CourseDetailsPage"
        Title="Course Details"/>

    <ShellContent
        ContentTemplate="{DataTemplate local:QuestionsPage}"
        Route="Pages.QuestionsPage"
        Title="Questions(Test)"/>

    <ShellContent
         ContentTemplate="{DataTemplate local:SettingsPage}"
         Route="Pages.SettingsPage"
         Title="Settings"/>
    
    <ShellContent
        ContentTemplate="{DataTemplate local:Debug}"
        Route="Pages.Debug"
        Title="Debug"/>

</Shell>